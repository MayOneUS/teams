doctype html
html
  head
    include includes/head
  body
    include includes/header

    .container
      .page-header
        h1 Create a new page

      .page-body
        form(method="post")
          .container
            .col-md-6
              h2 Required:
              dl
                dt {{form.title.label}}
                dd
                  div {{form.title}}
                  {% if form.title.errors %}
                  ul.errors
                    {% for error in form.title.errors %}
                    li {{error}}
                    {% endfor %}
                  {% endif %}

                dt {{form.description.label}}
                dd
                  div {{form.description(rows=10, style="width: 100%;")}}
                  {% if form.description.errors %}
                  ul.errors
                    {% for error in form.description.errors %}
                    li {{error}}
                    {% endfor %}
                  {% endif %}

              div.create_team(style="text-align: right;")
                input(type="submit", value="Publish")

            .col-md-1
            .col-md-5
              h2 Optional:

                dt {{form.zip_code.label}}
                dd
                  div {{form.zip_code}}
                  {% if form.zip_code.errors %}
                  ul.errors
                    {% for error in form.zip_code.errors %}
                    li {{error}}
                    {% endfor %}
                  {% endif %}

    include includes/footer

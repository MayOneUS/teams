doctype html
html
  head
    include includes/head
  body
    include includes/header

  .makebackground
      .container
        .page-header
          .col-md-8
            h1 {{team.title}}'s 
              span.apostrophe-pp pledge page

          .col-md-4(style="text-align:right;")
            {% if edit_url %}
            a(href="{{edit_url}}") Edit
            {% endif %}
        .main-content.col-md-8
          {% if team.youtube_id %}
          {% else %}
          p.word-note A word from Professor Lawrence Lessig about the Mayday PAC:
          {% endif %}

          .video-container
            {% if team.youtube_id %}
            iframe(src="//www.youtube.com/embed/{{team.youtube_id}}",
                   frameborder="0", allowfullscreen, width="420%")
            {% elif team.image_url %}
            img(src="{{team.image_url}}")
            {% else %}
            iframe(src="//player.vimeo.com/video/93299391", width="420",
                   height="236", frameborder="0", webkitallowfullscreen,
                   mozallowfullscreen, allowfullscreen)
            {% endif %}
          {% autoescape false %}
          p.word-note A word from {{team.title}}:
          div.description {{description_rendered}}
          {% endautoescape %}

        .sidebar.col-md-4
          p This page has raised x dollars from y pledges!
          div.pledge
            a(href="https://pledge.mayone.us/pledge?team={{team.key()}}") pledge!
          div.social
            a.facebook
            a.twitter
            a.email

    include includes/footer
